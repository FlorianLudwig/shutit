FROM progrium/busybox
RUN opkg-install bash
RUN opkg-install gcc
RUN opkg-install perlbase-io perlbase-data perlbase-class perlbase-file perlbase-getopt perlbase-dynaloader perlbase-text

# Make default shells bash
RUN sed -i 's/^root.*bin.sh/root:x:0:0:root:\/root:\/bin\/bash/' /etc/passwd

RUN echo "ShutIt base distribution 0.1" > /etc/issue

# Needed for ShutIt
ADD base64 /usr/bin/base64
ADD tar /root/tar
ADD m4 /usr/bin/m4
#ADD autom4te /usr/bin/autom4te

# Identify ourselves as a ShutIt distro
CMD ["/bin/bash"]
